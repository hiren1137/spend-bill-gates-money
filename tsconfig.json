{
  "compilerOptions": {
    "target": "esnext",                           // Ensures compatibility with modern JavaScript features
    "lib": ["dom", "dom.iterable", "esnext"],     // Includes browser and ESNext features
    "allowJs": true,                              // Allows JavaScript files in TypeScript project
    "skipLibCheck": true,                         // Skips type checking of declaration files
    "strict": true,                               // Enables all strict type-checking options
    "noEmit": true,                               // Prevents TypeScript from emitting output files
    "esModuleInterop": true,                      // Enables interoperability between CommonJS and ES Modules
    "module": "esnext",                           // Uses the ESNext module system
    "moduleResolution": "node",                   // Resolves modules like Node.js
    "resolveJsonModule": true,                    // Enables importing JSON modules
    "isolatedModules": true,                      // Ensures each file is treated as an isolated module
    "jsx": "preserve",                            // Preserves JSX as it is
    "incremental": true,                          // Speeds up compilation by storing incremental information
    "plugins": [
      {
        "name": "next"                            // Adds support for Next.js specific features
      }
    ],
    "paths": {
      "@/*": ["./src/*"]                         // Maps @/* to the src folder for better project structure
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
